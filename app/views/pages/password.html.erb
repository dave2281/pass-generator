<%= form_with url: root_path, method: :get, remote: true, data: { turbo: true } do %>
  <section class="text-gray-600 body-font h-screen flex flex-col items-center bg-gray-900 bg-svg-constellation-gray-100 relative">
      <div class="w-full flex justify-center pt-12">
        <h1 class="md:text-6xl text-3xl mb-4 font-bold text-white tracking-tight leading-tight text-center">
          Password <span class="border-b-4 border-green-400"></span> Generator.
        </h1>
      </div>
    
      <div class="flex-grow flex flex-col items-center justify-center w-full">
        <%= turbo_frame_tag "password_form" do %>
          <%= render "password", password: @password, class: "text-white md:text-3xl text-3xl"%>
        <% end %>

        <div class="mt-4">
          <label class="text-white mr-4">
            <label class="text-center">Длина пароля: <span id="length-display">12</span></label>
            <%= range_field_tag :length, 12, min: 5, max: 128, oninput: "document.getElementById('length-display').innerText = this.value", class: 'w-1/2 h-2 bg-green-400 rounded-lg appearance-none cursor-pointer range-slider' %>
          </label>
        </div>

        <div class="mt-4">
          <label class="text-white mr-4">
            <%= check_box_tag :include_symbols, '1', true %>
            <label>Использовать символы (!, @, # и т.д.)</label>
          </label>
        </div>

        <div class="mt-4">
          <label class="text-white mr-4">
            <%= check_box_tag :include_numbers, '1', true %>
            <label>Использовать цифры (0-9)</label>
          </label>
        </div>

        <div class="mt-4" >
          <%= submit_tag 'Сгенерировать пароль', class: 'mt-4 px-6 py-2 bg-green-500 text-white rounded' %>
        </div>
      </div>
  </section>
<% end %>
